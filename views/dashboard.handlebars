{{#if posts.length}}
<section>
    <div class=""row align-items-center">
        <h2>Hey there, {{username}}!</h2>
        <p>Click on the post title to edit your post!</p>
        <br>
    {{#each posts as |post|}}
    <input type="hidden" name="post-id" value="{{post.id}}"/>
        <div class="card">
            <div class="card-header">
                <h4><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
            </div>  
            <button class="btn btn-danger" id="del-post-btn"><i class="bi bi-trash"></i>Delete Post</button>                          
        </div>
    {{/each}}
</section>
{{ else }}
    <h2>You have not created any posts yet!</h2>
{{/if}}
<button type="submit" class="btn"><a href="/dashboard/new"><i class="bi bi-plus-square"></i>Add New Post</a></button>

<script src="/js/edit.js"></script>